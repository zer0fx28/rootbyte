{
  "name": "rootbyte",
  "version": "1.0.0",
  "description": "ROOT•BYTE - Understanding the Foundation of Technology. Educational tech content with Claude Code integration.",
  "main": "src/index.html",
  "scripts": {
    "dev": "python3 -m http.server 3000 --directory src",
    "serve": "python3 -m http.server 8000 --directory src",
    "build": "node scripts/build.js",
    "new-article": "node scripts/new-article.js",
    "fetch-trending": "node scripts/fetch-trending.js",
    "optimize-images": "node scripts/optimize-images.js",
    "deploy": "npm run fetch-trending && git add . && git commit -m 'Update content' && git push",
    "setup": "npm run fetch-trending && echo 'ROOT•BYTE setup complete!'",
    "clean": "rm -rf .cache && rm -rf dist && echo 'Cleaned build artifacts'",
    "validate": "node scripts/validate-content.js",
    "sitemap": "node scripts/generate-sitemap.js",
    "backup": "node scripts/backup-content.js",
    "content": "node scripts/content-manager.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ipswich38/rootbyte.git"
  },
  "keywords": [
    "technology",
    "tech-education",
    "programming",
    "foundations",
    "root-concepts",
    "claude-code",
    "static-site",
    "blog",
    "content-management"
  ],
  "author": {
    "name": "KreativLoops",
    "email": "hello@rootbyte.com",
    "url": "https://rootbyte.vercel.app"
  },
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "eslint": "^8.57.0",
    "markdownlint": "^0.33.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "config": {
    "articlesPerPage": 9,
    "trendingUpdateInterval": "4h",
    "imageOptimization": true,
    "generateSitemap": true
  },
  "rootbyte": {
    "version": "1.0.0",
    "buildDate": "2026-02-18",
    "features": [
      "Claude Code Integration",
      "Automated Content Management",
      "Trending News Integration",
      "AdSense Ready",
      "Mobile-First Design",
      "SEO Optimized"
    ],
    "deployment": {
      "platform": "Vercel",
      "rootDirectory": "src",
      "framework": "Static",
      "buildCommand": "npm run build",
      "outputDirectory": "src"
    }
  }
}
