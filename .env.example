# ROOTâ€¢BYTE Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# NEWS API (newsapi.org)
# =============================================================================
# Get your free API key at: https://newsapi.org/register
# Free tier: 100 requests/day
# Used for: Trending tech news ticker
NEWS_API_KEY=your_newsapi_key_here

# =============================================================================
# BREVO EMAIL API (brevo.com)
# =============================================================================
# Get your free API key at: https://brevo.com (formerly Sendinblue)
# Free tier: 300 emails/day
# Used for: Newsletter subscriptions and campaigns
BREVO_API_KEY=your_brevo_api_key_here

# =============================================================================
# GOOGLE ADSENSE
# =============================================================================
# Your Google AdSense Publisher ID
# Format: ca-pub-XXXXXXXXXXXXXXXXX
ADSENSE_PUBLISHER_ID=ca-pub-your_adsense_id_here

# AdSense Ad Slots (get these from your AdSense dashboard)
ADSENSE_SLOT_LEADERBOARD=your_leaderboard_slot_id
ADSENSE_SLOT_IN_FEED=your_in_feed_slot_id
ADSENSE_SLOT_SIDEBAR_1=your_sidebar_1_slot_id
ADSENSE_SLOT_SIDEBAR_2=your_sidebar_2_slot_id

# =============================================================================
# WEBSITE CONFIGURATION
# =============================================================================
# Your website URL (used for canonical URLs and social sharing)
SITE_URL=https://rootbyte.vercel.app

# Contact email for the website
CONTACT_EMAIL=hello@rootbyte.com

# =============================================================================
# SOCIAL MEDIA (Optional)
# =============================================================================
TWITTER_HANDLE=@rootbyte
GITHUB_URL=https://github.com/yourusername/rootbyte
LINKEDIN_URL=https://linkedin.com/company/rootbyte

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# Google Analytics Measurement ID (GA4)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Search Console verification
GOOGLE_SITE_VERIFICATION=your_google_site_verification_code

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Environment: development, staging, production
NODE_ENV=development

# Enable debug logging
DEBUG=false

# =============================================================================
# CONTENT SETTINGS
# =============================================================================
# Newsletter signup confirmation page
NEWSLETTER_CONFIRM_URL=https://rootbyte.vercel.app/newsletter-confirm

# Number of articles per page
ARTICLES_PER_PAGE=9

# Trending news update interval (in minutes)
TRENDING_UPDATE_INTERVAL=240

# =============================================================================
# SECURITY (Optional)
# =============================================================================
# Content Security Policy nonce (auto-generated if not provided)
CSP_NONCE=

# Rate limiting (requests per minute per IP)
RATE_LIMIT=100